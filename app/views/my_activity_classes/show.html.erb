<%- model_class = ActivityClass -%>
<%- child_model_class = StudentClassDatum -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:started_at).capitalize %></dt>
      <dd><pre class="prettyprint"><%= @activity_class.started_at.try(:strftime,'%d/%m/%Y %H:%M') %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:ended_at).capitalize %></dt>
      <dd><pre class="prettyprint"><%= @activity_class.ended_at.try(:strftime,'%d/%m/%Y %H:%M') %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:activity_id).capitalize %></dt>
      <dd><pre class="prettyprint">
        <% activity = @activity_class.activity %>
        <%= link_to activity, show_activity_classes_teacher_activity_path( @teacher, activity ) %>
      </pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', default: t("helpers.links.back")),
              teacher_activity_classes_path( @teacher ), class: 'btn btn-default'  %>
  <%= link_to t('.edit', default: t("helpers.links.edit")),
              edit_teacher_activity_class_path( @teacher, @activity_class ), class: 'btn btn-default' %>
  <%= link_to t('helpers.links.show_x', x: child_model_class.model_name.human( count: 2 )),
              show_student_class_data_teacher_activity_class_path( @teacher, @activity_class), class: 'btn btn-default' %>
  <%= link_to t('helpers.links.edit_x', x: child_model_class.model_name.human( count: 2 )),
              edit_student_class_data_teacher_activity_class_path( @teacher, @activity_class), class: 'btn btn-default' %>
  <%= link_to t('.destroy', default: t("helpers.links.destroy")),
              teacher_activity_class_path( @teacher, @activity_class ),
              method: 'delete',
              data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
              class: 'btn btn-danger' %>
</div>