<%= form_for @school_representative, html: { class: 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :full_name, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :full_name, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :position, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :position, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :details, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :details, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :school_id, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :school_id, class: 'text_field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= link_to t('.cancel', default: t("helpers.links.cancel")),
                  school_representatives_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
