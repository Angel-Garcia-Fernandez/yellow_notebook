<%- model_class = SchoolRepresentative -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:full_name).capitalize %></dt>
      <dd><pre class="prettyprint"><%= @school_representative.full_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:position).capitalize %></dt>
      <dd><pre class="prettyprint"><%= @school_representative.position %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:details).capitalize %></dt>
      <dd><pre class="prettyprint"><%= @school_representative.details %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:school_id).capitalize %></dt>
      <dd><pre class="prettyprint"><%= @school_representative.school_id %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', default: t("helpers.links.back")),
              school_representatives_path, class: 'btn btn-default'  %>
  <%= link_to t('.edit', default: t("helpers.links.edit")),
              edit_school_representative_path(@school_representative), class: 'btn btn-default' %>
  <%= link_to t('.destroy', default: t("helpers.links.destroy")),
              school_representative_path(@school_representative),
              method: 'delete',
              data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
              class: 'btn btn-danger' %>
</div>