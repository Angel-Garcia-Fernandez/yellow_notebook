<%- model_class = TeacherActivity -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:attendance_management) %></dt>
      <dd><pre class="prettyprint"><%= @teacher_activity.attendance_management %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:collection_management) %></dt>
      <dd><pre class="prettyprint"><%= @teacher_activity.collection_management %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:teacher_in_charge) %></dt>
      <dd><pre class="prettyprint"><%= @teacher_activity.teacher_in_charge %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:activity_id) %></dt>
      <dd><pre class="prettyprint"><%= @teacher_activity.activity_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:teacher_id) %></dt>
      <dd><pre class="prettyprint"><%= @teacher_activity.teacher_id %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', default: t("helpers.links.back")),
              teacher_activities_path, class: 'btn btn-default'  %>
  <%= link_to t('.edit', default: t("helpers.links.edit")),
              edit_teacher_activity_path(@teacher_activity), class: 'btn btn-default' %>
  <%= link_to t('.destroy', default: t("helpers.links.destroy")),
              teacher_activity_path(@teacher_activity),
              method: 'delete',
              data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
              class: 'btn btn-danger' %>
</div>