<%- model_class = TeacherActivity -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
    <dt class="label label-default"><%= model_class.human_attribute_name(:teacher).capitalize %></dt>
    <dd><pre class="prettyprint">
      <% teacher = @teacher_activity.teacher %>
      <%= link_to teacher, teacher_path( teacher ) %>
    </pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:activity).capitalize %></dt>
    <dd><pre class="prettyprint">
      <% activity = @teacher_activity.activity %>
      <%= link_to activity, activity_path( activity ) %>
    </pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:attendance_management).capitalize %></dt>
      <dd><pre class="prettyprint"><%= boolean_glyph @teacher_activity.attendance_management %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:collection_management).capitalize %></dt>
      <dd><pre class="prettyprint"><%= boolean_glyph @teacher_activity.collection_management %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:teacher_in_charge).capitalize %></dt>
      <dd><pre class="prettyprint"><%= boolean_glyph @teacher_activity.teacher_in_charge %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', default: t("helpers.links.back")),
              teacher_activities_path, class: 'btn btn-default'  %>
  <%= link_to t('.edit', default: t("helpers.links.edit")),
              edit_teacher_activity_path(@teacher_activity), class: 'btn btn-default' %>
  <%= link_to t('.destroy', default: t("helpers.links.destroy")),
              teacher_activity_path(@teacher_activity),
              method: 'delete',
              data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
              class: 'btn btn-danger' %>
</div>