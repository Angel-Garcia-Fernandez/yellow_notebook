<%= form_for @teacher_activity, html: { class: 'form-horizontal' } do |f| %>
    <div class="form-group">
      <%= f.label :activity, class: 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.collection_select :activity_id, @activities, :id, :to_s,  { include_blank: true }, {class: 'select-search form-control'} %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :teacher_id, class: 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.collection_select :teacher_id, @teachers, :id, :to_s,  { include_blank: true }, {class: 'select-search form-control'} %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :attendance_management, class: 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.check_box :attendance_management, class: 'text_field form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :collection_management, class: 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.check_box :collection_management, class: 'text_field form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :teacher_in_charge, class: 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.check_box :teacher_in_charge, class: 'text_field form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class='col-md-offset-2 col-md-10'>
        <%= f.submit nil, class: 'btn btn-primary' %>
        <%= link_to t('.cancel', default: t("helpers.links.cancel")),
                    teacher_activities_path, class: 'btn btn-default' %>
      </div>
    </div>
<% end %>
