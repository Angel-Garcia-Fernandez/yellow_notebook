<%= form_for @teacher_activity, html: { class: 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :attendance_management, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :attendance_management, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :collection_management, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :collection_management, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :teacher_in_charge, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :teacher_in_charge, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :activity_id, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :activity_id, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :teacher_id, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :teacher_id, class: 'text_field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= link_to t('.cancel', default: t("helpers.links.cancel")),
                  teacher_activities_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
