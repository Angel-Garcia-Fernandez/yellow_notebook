<%- model_class = StudentActivitySignUp -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:activity_discount) %></dt>
      <dd><pre class="prettyprint"><%= @student_activity_sign_up.activity_discount %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:started_at) %></dt>
      <dd><pre class="prettyprint"><%= @student_activity_sign_up.started_at %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:ended_at) %></dt>
      <dd><pre class="prettyprint"><%= @student_activity_sign_up.ended_at %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:payment_type_eid) %></dt>
      <dd><pre class="prettyprint"><%= @student_activity_sign_up.payment_type_eid %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:activity_id) %></dt>
      <dd><pre class="prettyprint"><%= @student_activity_sign_up.activity_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:student_id) %></dt>
      <dd><pre class="prettyprint"><%= @student_activity_sign_up.student_id %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', default: t("helpers.links.back")),
              student_activity_sign_ups_path, class: 'btn btn-default'  %>
  <%= link_to t('.edit', default: t("helpers.links.edit")),
              edit_student_activity_sign_up_path(@student_activity_sign_up), class: 'btn btn-default' %>
  <%= link_to t('.destroy', default: t("helpers.links.destroy")),
              student_activity_sign_up_path(@student_activity_sign_up),
              method: 'delete',
              data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
              class: 'btn btn-danger' %>
</div>