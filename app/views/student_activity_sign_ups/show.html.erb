<%- model_class = StudentActivitySignUp -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
    <dt class="label label-default"><%= model_class.human_attribute_name(:student_id).capitalize %></dt>
    <dd><pre class="prettyprint">
      <% student = student_activity_sign_up.student %>
      <%= link_to student, student_path student %>
    </pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:activity_id).capitalize %></dt>
    <dd><pre class="prettyprint">
      <% activity = student_activity_sign_up.activity %>
      <%= link_to activity, activity_path activity %>
    </pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:activity_discount).capitalize %></dt>
    <dd><pre class="prettyprint"><%= @student_activity_sign_up.activity_discount %></pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:payment_type).capitalize %></dt>
    <dd><pre class="prettyprint"><%= model_class.human_enum_name :payment_type, @student_activity_sign_up.payment_type %></pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:started_at).capitalize %></dt>
    <dd><pre class="prettyprint"><%=l @student_activity_sign_up.started_at, format: :long %></pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:ended_at).capitalize %></dt>
    <dd><pre class="prettyprint"><%=l student_activity_sign_up.ended_at, format: :long %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', default: t("helpers.links.back")),
              student_activity_sign_ups_path, class: 'btn btn-default'  %>
  <%= link_to t('.edit', default: t("helpers.links.edit")),
              edit_student_activity_sign_up_path(@student_activity_sign_up), class: 'btn btn-default' %>
  <%= link_to t('.destroy', default: t("helpers.links.destroy")),
              student_activity_sign_up_path(@student_activity_sign_up),
              method: 'delete',
              data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
              class: 'btn btn-danger' %>
</div>