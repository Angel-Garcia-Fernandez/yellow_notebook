<%= form_for @student_activity_sign_up, html: { class: 'form-horizontal' } do |f| %>
    <div class="form-group">
      <%= f.label :student, class: 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.collection_select :student_id, @students, :id, :to_s,  { include_blank: true }, {class: 'select-search form-control'} %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :activity, class: 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.collection_select :activity_id, @activities, :id, :to_s,  { include_blank: true }, {class: 'select-search form-control'} %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :activity_discount, class: 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.text_field :activity_discount, class: 'discount text_field form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :payment_type_eid, class: 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.text_field :payment_type_eid, class: 'text_field form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :started_at, class: 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.text_field :started_at, class: 'datepicker text_field form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :ended_at, class: 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.text_field :ended_at, class: 'datepicker text_field form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class='col-md-offset-2 col-md-10'>
        <%= f.submit nil, class: 'btn btn-primary' %>
        <%= link_to t('.cancel', default: t("helpers.links.cancel")),
                    student_activity_sign_ups_path, class: 'btn btn-default' %>
      </div>
    </div>
<% end %>
