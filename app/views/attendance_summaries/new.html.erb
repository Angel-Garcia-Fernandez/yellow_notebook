<%- model_class = AttendanceSummary -%>
<div class="page-header">
  <h1><%=t '.title', default: [:'helpers.titles.new', 'New %{model}'], model: model_class.model_name.human.titleize %></h1>
</div>


<%= form_for @attendance_summary, url: attendance_summaries_path( format: :xlsx ), method: :post, html: { class: 'form-horizontal' } do |f| %>

    <div class="form-group">
      <%= f.label :period_started_at, class: 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.text_field :period_started_at, class: 'datepicker text_field form-control' , value: date_format( f.object.period_started_at )%>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :period_ended_at, class: 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.text_field :period_ended_at, class: 'datepicker text_field form-control' , value: date_format( f.object.period_ended_at )%>
      </div>
    </div>

    <div class="form-group">
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%#= link_to t('.cancel', default: t("helpers.links.cancel")),
                  activities_path, class: 'btn btn-default' %>
    </div>
<% end %>
