<%- model_class = ActivityClass -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:started_at) %></dt>
      <dd><pre class="prettyprint"><%= @activity_class.started_at %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:ended_at) %></dt>
      <dd><pre class="prettyprint"><%= @activity_class.ended_at %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', default: t("helpers.links.back")),
              activity_classes_path, class: 'btn btn-default'  %>
  <%= link_to t('.edit', default: t("helpers.links.edit")),
              edit_activity_class_path(@activity_class), class: 'btn btn-default' %>
  <%= link_to t('.destroy', default: t("helpers.links.destroy")),
              activity_class_path(@activity_class),
              method: 'delete',
              data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
              class: 'btn btn-danger' %>
</div>