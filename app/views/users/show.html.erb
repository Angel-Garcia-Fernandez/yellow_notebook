<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
    <dt class="label label-default"><%= model_class.human_attribute_name(:login).capitalize %></dt>
    <dd><pre class="prettyprint"><%= @user.login %></pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:email).capitalize %></dt>
    <dd><pre class="prettyprint"><%= @user.email %></pre></dd>
    <% teacher = @user.teacher %>
    <% if teacher.present? %>
        <dt class="label label-default"><%= model_class.human_attribute_name(:teacher).capitalize %></dt>
        <dd><pre class="prettyprint"> <%= link_to teacher, teacher_path( teacher ) %></pre></dd>
    <% end %>
    <dt class="label label-default"><%= model_class.human_attribute_name(:remember_created_at).capitalize %></dt>
    <dd><pre class="prettyprint"><%= @user.remember_created_at %></pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:sign_in_count).capitalize %></dt>
    <dd><pre class="prettyprint"><%= @user.sign_in_count %></pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:current_sign_in_at).capitalize %></dt>
    <dd><pre class="prettyprint"><%= @user.current_sign_in_at %></pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:last_sign_in_at).capitalize %></dt>
    <dd><pre class="prettyprint"><%= @user.last_sign_in_at %></pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:current_sign_in_ip).capitalize %></dt>
    <dd><pre class="prettyprint"><%= @user.current_sign_in_ip %></pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:last_sign_in_ip).capitalize %></dt>
    <dd><pre class="prettyprint"><%= @user.last_sign_in_ip %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', default: t("helpers.links.back")),
              users_path, class: 'btn btn-default'  %>
  <%= link_to t('.edit', default: t("helpers.links.edit")),
              edit_user_path(@user), class: 'btn btn-default' %>
  <%= link_to t('.edit_password', default: t("helpers.links.edit_password")),
              edit_password_user_path(@user), class: 'btn btn-default' %>
  <%= link_to t('.destroy', default: t("helpers.links.destroy")),
              user_path(@user),
              method: 'delete',
              data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
              class: 'btn btn-danger' %>
</div>