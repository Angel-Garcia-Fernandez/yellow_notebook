<%- model_class = ActivityClass -%>
<%- child_model_class = StudentClassDatum -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human( count:2 ).titleize %></h1>
  <h2>
    <%= model_class.human_attribute_name(:activity).capitalize %>:
    <%#= link_to @activity, show_activity_classes_teacher_activity_path( @teacher, @activity ) %>
    <%= @activity %>
  </h2>
</div>
<ul class="nav nav-tabs">
  <li><a data-toggle="tab" href="#completed"><%= "#{t( '.completed' )} (#{@completed.count})" %></a></li>
  <li class="active"><a data-toggle="tab" href="#incompleted"><%= "#{t( '.incompleted' )} (#{@incompleted.count})" %></a></li>
  <li><a data-toggle="tab" href="#pending"><%= "#{t( '.pending' )} (#{@pending.count})" %></a></li>
</ul>

<div class="tab-content">
  <div id="completed" class="tab-pane fade">
    <%= render partial: 'activity_classes', locals: { activity_classes: @completed, model_class: model_class, child_model_class: child_model_class } %>
  </div>
  <div id="incompleted" class="tab-pane fade in active">
    <%= render partial: 'activity_classes', locals: { activity_classes: @incompleted, model_class: model_class, child_model_class: child_model_class } %>
  </div>
  <div id="pending" class="tab-pane fade">
    <%= render partial: 'activity_classes', locals: { activity_classes: @pending, model_class: model_class, child_model_class: child_model_class } %>
  </div>
</div>

<div class="form-group">
  <%= link_to t('.back', default: t("helpers.links.back")),
              #:back,
              teacher_activities_path( @teacher ),
              class: 'btn btn-default'  %>
</div>