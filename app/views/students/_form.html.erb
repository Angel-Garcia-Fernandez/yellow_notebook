<%= form_for @student, html: { class: 'form-horizontal' } do |f| %>
    <div class="form-group">
      <%= f.label :name, class: 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.text_field :name, class: 'text_field form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :surname, class: 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.text_field :surname, class: 'text_field form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :nic, class: 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.text_field :nic, class: 'text_field form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :school, class: 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.collection_select :school_id, @schools, :id, :to_s,  { include_blank: true }, {class: 'select-search form-control'} %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :default_discount, class: 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.text_field :default_discount, class: 'text_field form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :default_payment_type, class: 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.select :default_payment_type, enum_options_for_select( f.object, :default_payment_type ), { include_blank: true }, class: 'select-search text_field form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :scholar_phone_number, class: 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.text_field :scholar_phone_number, class: 'text_field form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :phone_number, class: 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.text_field :phone_number, class: 'text_field form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :address, class: 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.text_field :address, class: 'text_field form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :zip_code, class: 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.text_field :zip_code, class: 'text_field form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :town, class: 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.text_field :town, class: 'text_field form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :province, class: 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.text_field :province, class: 'text_field form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :details, class: 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.text_area :details, class: 'text_field form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :iban, class: 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.text_field :iban, class: 'text_field form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :account_holder, class: 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.text_field :account_holder, class: 'text_field form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class='col-md-offset-2 col-md-10'>
        <%= f.submit nil, class: 'btn btn-primary' %>
        <%= link_to t('.cancel', default: t("helpers.links.cancel")),
                    students_path, class: 'btn btn-default' %>
      </div>
    </div>
<% end %>
