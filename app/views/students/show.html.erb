<%- model_class = Student -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
    <dt class="label label-default"><%= model_class.human_attribute_name(:name).capitalize %></dt>
    <dd><pre class="prettyprint"><%= @student.name %></pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:surname).capitalize %></dt>
    <dd><pre class="prettyprint"><%= @student.surname %></pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:nic).capitalize %></dt>
    <dd><pre class="prettyprint"><%= @student.nic %></pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:default_discount).capitalize %></dt>
    <dd><pre class="prettyprint"><%= number_to_percentage @student.default_discount * 100 %></pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:default_payment_type_eid).capitalize %></dt>
    <dd><pre class="prettyprint"><%= @student.default_payment_type_eid %></pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:scholar_phone_number).capitalize %></dt>
    <dd><pre class="prettyprint"><%= @student.scholar_phone_number %></pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:phone_number).capitalize %></dt>
    <dd><pre class="prettyprint"><%= @student.phone_number %></pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:address).capitalize %></dt>
    <dd><pre class="prettyprint"><%= @student.address %></pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:zip_code).capitalize %></dt>
    <dd><pre class="prettyprint"><%= @student.zip_code %></pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:town).capitalize %></dt>
    <dd><pre class="prettyprint"><%= @student.town %></pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:province).capitalize %></dt>
    <dd><pre class="prettyprint"><%= @student.province %></pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:details).capitalize %></dt>
    <dd><pre class="prettyprint"><%= @student.details %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', default: t("helpers.links.back")),
              students_path, class: 'btn btn-default'  %>
  <%= link_to t('.edit', default: t("helpers.links.edit")),
              edit_student_path(@student), class: 'btn btn-default' %>
  <%= link_to t('.destroy', default: t("helpers.links.destroy")),
              student_path(@student),
              method: 'delete',
              data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
              class: 'btn btn-danger' %>
</div>