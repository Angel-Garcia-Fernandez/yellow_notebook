<%- model_class = Guardian -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human( count:2 ).titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id).capitalize %></th>
      <th><%= model_class.human_attribute_name(:nic).capitalize %></th>
      <th><%= model_class.human_attribute_name(:name).capitalize %></th>
      <th><%= model_class.human_attribute_name(:surname).capitalize %></th>
      <th><%= model_class.human_attribute_name(:phone_number).capitalize %></th>
      <th><%= model_class.human_attribute_name(:address).capitalize %></th>
      <th><%= model_class.human_attribute_name(:town).capitalize %></th>
      <th><%= model_class.human_attribute_name(:province).capitalize %></th>
      <th><%= model_class.human_attribute_name(:zip_code).capitalize %></th>
      <th><%= model_class.human_attribute_name(:student_id).capitalize %></th>
      <th><%= model_class.human_attribute_name(:created_at).capitalize %></th>
      <th><%=t '.actions', default: t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @guardians.each do |guardian| %>
      <tr>
        <td><%= guardian.id %></td>
          <td><%= guardian.nic %></td>
          <td><%= guardian.name %></td>
          <td><%= guardian.surname %></td>
          <td><%= guardian.phone_number %></td>
          <td><%= guardian.address %></td>
          <td><%= guardian.town %></td>
          <td><%= guardian.province %></td>
          <td><%= guardian.zip_code %></td>
          <td><%= guardian.student_id %></td>
        <td><%=l guardian.created_at, format: :long %></td>
        <td>
          <%= link_to guardian_path(guardian), class: 'btn btn-xs', title: "#{ t('.show', default: t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
          <%- end -%>
          <%= link_to edit_guardian_path(guardian), class: 'btn btn-xs', title: "#{ t('.edit', default: t('helpers.links.edit')) }" do %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to guardian_path(guardian), method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-xs', title: "#{ t('.destroy', default: t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', default: t("helpers.links.new")),
            new_guardian_path,
            class: 'btn btn-primary' %>
