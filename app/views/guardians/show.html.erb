<%- model_class = Guardian -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:nic).capitalize %></dt>
      <dd><pre class="prettyprint"><%= @guardian.nic %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name).capitalize %></dt>
      <dd><pre class="prettyprint"><%= @guardian.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:surname).capitalize %></dt>
      <dd><pre class="prettyprint"><%= @guardian.surname %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:phone_number).capitalize %></dt>
      <dd><pre class="prettyprint"><%= @guardian.phone_number %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:address).capitalize %></dt>
      <dd><pre class="prettyprint"><%= @guardian.address %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:town).capitalize %></dt>
      <dd><pre class="prettyprint"><%= @guardian.town %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:province).capitalize %></dt>
      <dd><pre class="prettyprint"><%= @guardian.province %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:zip_code).capitalize %></dt>
      <dd><pre class="prettyprint"><%= @guardian.zip_code %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:student_id).capitalize %></dt>
      <dd><pre class="prettyprint"><%= @guardian.student_id %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', default: t("helpers.links.back")),
              guardians_path, class: 'btn btn-default'  %>
  <%= link_to t('.edit', default: t("helpers.links.edit")),
              edit_guardian_path(@guardian), class: 'btn btn-default' %>
  <%= link_to t('.destroy', default: t("helpers.links.destroy")),
              guardian_path(@guardian),
              method: 'delete',
              data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
              class: 'btn btn-danger' %>
</div>