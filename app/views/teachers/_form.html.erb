<%= form_for @teacher, html: { class: 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :name, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :name, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :surname, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :surname, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :manage_attendance_default, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :manage_attendance_default, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :manage_collection_default, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :manage_collection_default, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :details, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :details, class: 'text_field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= link_to t('.cancel', default: t("helpers.links.cancel")),
                  teachers_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
