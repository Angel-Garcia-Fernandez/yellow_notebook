<%- model_class = Teacher -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
    <dt class="label label-default"><%= model_class.human_attribute_name(:photo) %></dt>
    <dd><pre class="prettyprint"><%= image_tag @teacher.photo.url(:medium) %></pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
    <dd><pre class="prettyprint"><%= @teacher.name %></pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:surname) %></dt>
    <dd><pre class="prettyprint"><%= @teacher.surname %></pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:nic) %></dt>
    <dd><pre class="prettyprint"><%= @teacher.nic %></pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:iban) %></dt>
    <dd><pre class="prettyprint"><%= @teacher.iban %></pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:user) %></dt>
    <dd><pre class="prettyprint"><%= @teacher.user %></pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:default_collection_management) %></dt>
    <dd><pre class="prettyprint"><%= @teacher.default_collection_management.humanize %></pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:default_attendance_management) %></dt>
    <dd><pre class="prettyprint"><%= @teacher.default_attendance_management.humanize %></pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:mobile_phone_number) %></dt>
    <dd><pre class="prettyprint"><%= @teacher.mobile_phone_number %></pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:phone_number) %></dt>
    <dd><pre class="prettyprint"><%= @teacher.phone_number %></pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:work_email) %></dt>
    <dd><pre class="prettyprint"><%= @teacher.work_email %></pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:studies) %></dt>
    <dd><pre class="prettyprint"><%= @teacher.studies %></pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:address) %></dt>
    <dd><pre class="prettyprint"><%= @teacher.address %></pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:town) %></dt>
    <dd><pre class="prettyprint"><%= @teacher.town %></pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:province) %></dt>
    <dd><pre class="prettyprint"><%= @teacher.province %></pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:zip_code) %></dt>
    <dd><pre class="prettyprint"><%= @teacher.zip_code %></pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:details) %></dt>
    <dd><pre class="prettyprint"><%= @teacher.details %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', default: t("helpers.links.back")),
              teachers_path, class: 'btn btn-default'  %>
  <%= link_to t('.edit', default: t("helpers.links.edit")),
              edit_teacher_path(@teacher), class: 'btn btn-default' %>
  <%= link_to t('.destroy', default: t("helpers.links.destroy")),
              teacher_path(@teacher),
              method: 'delete',
              data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
              class: 'btn btn-danger' %>
</div>