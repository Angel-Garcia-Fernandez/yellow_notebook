<%- model_class = Teacher -%>
<div class="page-header">
  <h1><%=t '.title', default: [:'helpers.titles.edit', 'Edit %{model}'], model: model_class.model_name.human.titleize %></h1>
</div>

<%= form_for @teacher, url: activities_teacher_path( @teacher ), method: :patch, html: { class: 'form-horizontal' } do |f| %>
    <%= f.nested_fields_for :teacher_activities do |a| %>
        <div class="form-group">
          <%= a.label :activity, class: 'control-label col-md-2' %>
          <div class="col-md-10">
            <%= a.collection_select :activity_id, @activities, :id, :to_s,  { include_blank: true }, {class: 'select-search form-control'} %>
          </div>
        </div>
        <div class="form-group">
          <%= a.label :attendance_management, class: 'control-label col-md-2' %>
          <div class="col-md-10">
            <%= a.check_box :attendance_management, {class: 'form-control'} %>
          </div>
        </div>
        <div class="form-group">
          <%= a.label :collection_management, class: 'control-label col-md-2' %>
          <div class="col-md-10">
            <%= a.check_box :collection_management, {class: 'form-control'} %>
          </div>
        </div>
        <div class="form-group">
          <%= a.label :teacher_in_charge, class: 'control-label col-md-2' %>
          <div class="col-md-10">
            <%= a.check_box :teacher_in_charge, {class: 'form-control'} %>
          </div>
        </div>
        <%= a.remove_nested_fields_link %>
    <% end %>
    <%= f.add_nested_fields_link :teacher_activities %>
    <div class="form-group">
      <div class='col-md-offset-2 col-md-10'>
        <%= f.submit nil, class: 'btn btn-primary' %>
        <%= link_to t('.cancel', default: t("helpers.links.cancel")),
                    teachers_path, class: 'btn btn-default' %>
      </div>
    </div>
<% end %>
