<%- model_class = Teacher -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human(count: 2).titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id).titleize  %></th>
      <th><%= model_class.human_attribute_name(:name).titleize  %></th>
      <th><%= model_class.human_attribute_name(:surname).titleize  %></th>
      <th><%= model_class.human_attribute_name(:manage_attendance_default).titleize  %></th>
      <th><%= model_class.human_attribute_name(:manage_collection_default).titleize  %></th>
      <th><%= model_class.human_attribute_name(:details).titleize  %></th>
      <th><%= model_class.human_attribute_name(:created_at).titleize %></th>
      <th><%=t '.actions', default: t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.id %></td>
          <td><%= teacher.name %></td>
          <td><%= teacher.surname %></td>
          <td><%= teacher.manage_attendance_default %></td>
          <td><%= teacher.manage_collection_default %></td>
          <td><%= teacher.details %></td>
        <td><%=l teacher.created_at, format: :long %></td>
        <td>
          <%= link_to teacher_path(teacher), class: 'btn btn-xs', title: "#{ t('.show', default: t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
          <%- end -%>
          <%= link_to edit_teacher_path(teacher), class: 'btn btn-xs', title: "#{ t('.edit', default: t('helpers.links.edit')) }" do %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to teacher_path(teacher), method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-xs', title: "#{ t('.destroy', default: t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', default: t("helpers.links.new")),
            new_teacher_path,
            class: 'btn btn-primary' %>
