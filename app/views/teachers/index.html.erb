<%- model_class = Teacher -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
  <tr>
    <th><%= model_class.human_attribute_name(:name) %></th>
    <th><%= model_class.human_attribute_name(:surname) %></th>
    <th><%= model_class.human_attribute_name(:user) %></th>
    <th><%= model_class.human_attribute_name(:default_collection_management) %></th>
    <th><%= model_class.human_attribute_name(:default_attendance_management) %></th>
    <th><%= model_class.human_attribute_name(:work_email) %></th>
    <th><%= model_class.human_attribute_name(:mobile_phone_number) %></th>
    <th><%= model_class.human_attribute_name(:phone_number) %></th>
    <th><%=t '.actions', default: t("helpers.actions") %></th>
  </tr>
  </thead>
  <tbody>
  <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.name %></td>
        <td><%= teacher.surname %></td>
        <td><%= teacher.user %></td>
        <td><%= boolean_glyph teacher.default_collection_management %></td>
        <td><%= boolean_glyph teacher.default_attendance_management %></td>
        <td><%= teacher.work_email %></td>
        <td><%= teacher.mobile_phone_number %></td>
        <td><%= teacher.phone_number %></td>
        <td>
          <%= link_to teacher_path(teacher), class: 'btn btn-xs', title: "#{ t('.show', default: t('helpers.links.show')) }" do %>
              <%= glyph 'info-sign' %>
          <%- end -%>
          <%= link_to edit_teacher_path(teacher), class: 'btn btn-xs', title: "#{ t('.edit', default: t('helpers.links.edit')) }" do %>
              <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to teacher_path(teacher), method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-xs', title: "#{ t('.destroy', default: t('helpers.links.destroy')) }" do %>
              <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to t('.new', default: t("helpers.links.new")),
            new_teacher_path,
            class: 'btn btn-primary' %>
