<%- model_class = ActivityClass -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human( count:2 ).titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id).capitalize %></th>
      <th><%= model_class.human_attribute_name(:started_at).capitalize %></th>
      <th><%= model_class.human_attribute_name(:ended_at).capitalize %></th>
      <th><%= model_class.human_attribute_name(:activity_id).capitalize %></th>
      <th><%= model_class.human_attribute_name(:created_at).capitalize %></th>
      <th><%=t '.actions', default: t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @activity_classes.each do |activity_class| %>
      <tr>
        <td><%= activity_class.id %></td>
          <td><%= activity_class.started_at %></td>
          <td><%= activity_class.ended_at %></td>
          <td><%= activity_class.activity_id %></td>
        <td><%=l activity_class.created_at, format: :long %></td>
        <td>
          <%= link_to activity_class_path(activity_class), class: 'btn btn-xs', title: "#{ t('.show', default: t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
          <%- end -%>
          <%= link_to edit_activity_class_path(activity_class), class: 'btn btn-xs', title: "#{ t('.edit', default: t('helpers.links.edit')) }" do %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to activity_class_path(activity_class), method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-xs', title: "#{ t('.destroy', default: t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', default: t("helpers.links.new")),
            new_activity_class_path,
            class: 'btn btn-primary' %>
