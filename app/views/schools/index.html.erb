<%- model_class = School -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human( count:2 ).titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name).capitalize %></th>
      <th><%= model_class.human_attribute_name(:town).capitalize %></th>
      <th><%= model_class.human_attribute_name(:zip_code).capitalize %></th>
      <th><%= model_class.human_attribute_name(:email).capitalize %></th>
      <th><%= model_class.human_attribute_name(:phone).capitalize %></th>
      <th><%=t '.actions', default: t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @schools.each do |school| %>
      <tr>
          <td><%= school.name %></td>
          <td><%= school.town %></td>
          <td><%= school.zip_code %></td>
          <td><%= school.email %></td>
          <td><%= school.phone %></td>
        <td>
          <%= link_to school_path(school), class: 'btn btn-xs', title: "#{ t('.show', default: t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
          <%- end -%>
          <%= link_to edit_school_path(school), class: 'btn btn-xs', title: "#{ t('.edit', default: t('helpers.links.edit')) }" do %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to school_path(school), method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-xs', title: "#{ t('.destroy', default: t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @activities, :theme => 'twitter-bootstrap-3' %>

<div class="form-group">
    <%= link_to t('.new', default: t("helpers.links.new")),
            new_school_path,
            class: 'btn btn-primary' %>
</div>