<% if user_signed_in? %>
    <% if current_user.admin? %>
        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#"> <%= t('.admin') %>
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to t('.users'), users_path %></li>
            <li><%= link_to t('.teachers'), teachers_path %></li>
            <li><%= link_to t('.schools'), schools_path %></li>
            <li><%= link_to t('.activities'), activities_path %></li>
            <li><%= link_to t('.students'), students_path %></li>
          </ul>
        </li>
    <% end %>

    <% teacher = current_user.teacher %>
    <% if teacher.present? %>
        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#"> <%= t('.management') %>
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to t('.my_activities'), show_my_activities_teacher_path( teacher ) %></li>
            <li><%= link_to t('.my_classes'), teacher_activity_classes_path( teacher ) %></li>
          </ul>
        </li>
    <% end %>

    <li class="dropdown">
      <a class="dropdown-toggle" href="#" data-toggle="dropdown"> <%= current_user %>
        <span class="caret"></span></a>
      <ul class="dropdown-menu">
        <li><%= link_to t('.edit_account'), edit_user_path( current_user ) %></li>
        <li><%= link_to t('.sign_out'), destroy_user_session_path, :method=>'delete' %></li>
      </ul>
    </li>
<%else%>
    <li><%= link_to t('.sign_in'), new_user_session_path %></li>
<% end %>