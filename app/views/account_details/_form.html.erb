<%= form_for @account_detail, html: { class: 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :iban, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :iban, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :default_account, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :default_account, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :guardian_id, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :guardian_id, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :student_id, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :student_id, class: 'text_field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= link_to t('.cancel', default: t("helpers.links.cancel")),
                  account_details_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
