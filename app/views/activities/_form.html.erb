<%= form_for @activity, html: { class: 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :code, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :code, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :name, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :name, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :classification, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :classification, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :started_at, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :started_at, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :ended_at, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :ended_at, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :default_price, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :default_price, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :details, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :details, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :school_id, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :school_id, class: 'text_field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= link_to t('.cancel', default: t("helpers.links.cancel")),
                  activities_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
