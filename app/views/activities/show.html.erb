<%- model_class = Activity -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:code) %></dt>
      <dd><pre class="prettyprint"><%= @activity.code %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @activity.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:classification) %></dt>
      <dd><pre class="prettyprint"><%= @activity.classification %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:started_at) %></dt>
      <dd><pre class="prettyprint"><%= @activity.started_at %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:ended_at) %></dt>
      <dd><pre class="prettyprint"><%= @activity.ended_at %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:default_price) %></dt>
      <dd><pre class="prettyprint"><%= @activity.default_price %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', default: t("helpers.links.back")),
              activities_path, class: 'btn btn-default'  %>
  <%= link_to t('.edit', default: t("helpers.links.edit")),
              edit_activity_path(@activity), class: 'btn btn-default' %>
  <%= link_to t('.destroy', default: t("helpers.links.destroy")),
              activity_path(@activity),
              method: 'delete',
              data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
              class: 'btn btn-danger' %>
</div>