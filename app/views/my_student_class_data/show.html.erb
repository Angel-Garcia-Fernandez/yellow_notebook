<%- model_class = StudentClassDatum -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
    <dt class="label label-default"><%= model_class.human_attribute_name(:activity_class).capitalize %></dt>
    <dd><pre class="prettyprint"><%= @student_class_datum.activity_class.try( :to_s, true ) %></pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:activity).capitalize %></dt>
    <dd><pre class="prettyprint"><%= @student_class_datum.activity %></pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:student_activity_sign_up).capitalize %></dt>
    <dd><pre class="prettyprint"><%= @student_class_datum.student_activity_sign_up.try( :student ) %></pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:attended).capitalize %></dt>
    <dd><pre class="prettyprint"><%= @student_class_datum.attended.humanize %></pre></dd>
    <dt class="label label-default"><%= model_class.human_attribute_name(:paid).capitalize %></dt>
    <dd><pre class="prettyprint"><%= @student_class_datum.paid.humanize %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', default: t("helpers.links.back")),
              show_student_class_data_teacher_activity_class_path( @teacher, @activity_class), class: 'btn btn-default'  %>
  <%= link_to t('.edit', default: t("helpers.links.edit")),
              edit_teacher_activity_class_student_class_datum_path( @teacher, @activity_class, @student_class_datum), class: 'btn btn-default' %>
  <%#= link_to t('.destroy', default: t("helpers.links.destroy")),
              teacher_activity_class_student_class_datum_path(@teacher, @activity_class, @student_class_datum),
              method: 'delete',
              data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
              class: 'btn btn-danger' %>
</div>